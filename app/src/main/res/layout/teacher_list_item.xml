<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout"
    android:background="#6a89cc"
    android:layout_gravity="center"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        android:background="#48dbfb">

        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src="@drawable/default_avatar"
            android:layout_marginLeft="15dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageAvatar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teacher_code_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CTI001"
                android:textSize="18sp"
                android:textColor="#5f27cd"/>
            <TextView
                android:id="@+id/full_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bui Xuan Ngoc"
                android:textSize="20sp"
                android:textColor="#341f97"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>





